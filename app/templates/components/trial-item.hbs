<div class="col-md-4 col-md-offset-4 well text-center">
	{{#if done}}
		<h3>No more challenges here <i class="fa fa-frown-o"></i></h3>
	{{else}}
		<h3>{{trial.challenge.name}}</h3>
		<ul class="list-group">
			<li class="list-group-item">
				{{#if concepts}}
					{{#each concepts as |concept|}}
			        	<div class="label label-default"><a href="#" style="color: white"><i class="fa fa-tags"></i> {{concept.name}}</a></div>
			        {{/each}}
			    {{else}}
			    	<span class="label label-default"><i class="fa fa-tags"></i> No Tags</span>
			   	{{/if}}
			</li>
			<li class="list-group-item">
				<code>Rewards: {{trial.exp}} Exp</code>
			</li>
		</ul>
		
	   	<br><br>
		<div class="btn-group">
			<a href="" {{action 'correctAnswer'}} class="btn btn-success">Right Answer</a>
			<a href="" class="btn btn-danger">Wrong Answer</a>
		</div>
	{{/if}}
</div>
{{yield}}
